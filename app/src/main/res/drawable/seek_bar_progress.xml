<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <gradient
                android:angle="225"
                android:endColor="@color/seek_bar_background"
                android:startColor="@color/seek_bar_background" />

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <corners android:radius="5dp" />

                <gradient
                    android:angle="225"
                    android:startColor="@color/seek_bar_progress1"
                    android:endColor="@color/seek_bar_progress2" />

            </shape>
        </clip>
    </item>

</layer-list>