<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" > <!-- pressed state -->
        <shape android:shape="oval">

            <stroke
                android:width="5dp"
                android:color="@color/seek_bar_thumb_press_ring" />

            <size
                android:width="@dimen/setting_timer_thumb_size"
                android:height="@dimen/setting_timer_thumb_size" />

            <solid android:color="@color/cyan" />

        </shape>
    </item>
    <item> <!-- default state -->
        <shape android:shape="oval">

            <stroke
                android:width="10dp"
                android:color="@color/transparent" />

            <size
                android:width="@dimen/setting_timer_thumb_size"
                android:height="@dimen/setting_timer_thumb_size" />

            <solid android:color="@color/cyan" />
        </shape>
    </item>


</selector> 