<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ll_profile"
    android:background="@color/primary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_data_height"
        android:padding="@dimen/normal_padding">

        <com.gloomy.shreddingrobot.Widget.TypefaceTextView
            android:id="@+id/tv_max_air_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ll_max_air_number"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/max_air_time"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/result_label_font_size"
            geekui:customTypeface="fonts/OpenSans-Semibold.ttf" />

        <View
            android:id="@+id/bar_max_air"
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_below="@id/tv_max_air_label"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginTop="15dp"

            android:layout_alignParentLeft="true"
            android:background="@color/lime" />

        <LinearLayout
            android:id="@+id/ll_max_air_number"
            android:layout_width="@dimen/result_number_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@+id/tv_max_air_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_max_air_time_unit"
                android:text="1.0"
                android:textColor="@color/lime"
                android:textSize="@dimen/result_value_font_size"
                geekui:customTypeface="fonts/OpenSans-Light.ttf" />

            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@id/tv_max_air_time_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_max_air_time"
                android:layout_alignParentEnd="true"
                android:text="Sec"
                android:textColor="@color/lime"
                android:textSize="@dimen/result_unit_font_size"
                geekui:customTypeface="fonts/OpenSans-Regular.ttf" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_data_height"
        android:padding="@dimen/normal_padding">

        <com.gloomy.shreddingrobot.Widget.TypefaceTextView
            android:id="@+id/tv_longest_jump_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ll_longest_jump_number"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/longest_jump"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/result_label_font_size"
            geekui:customTypeface="fonts/OpenSans-Semibold.ttf" />

        <View
            android:id="@+id/longest_jump_bar"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@id/tv_longest_jump_label"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@id/ll_longest_jump_number"
            android:background="@color/red" />

        <LinearLayout
            android:id="@+id/ll_longest_jump_number"
            android:layout_width="@dimen/result_number_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@+id/tv_longest_jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_longest_jump_unit"
                android:text="14"
                android:textColor="@color/red"
                android:textSize="@dimen/result_value_font_size"
                geekui:customTypeface="fonts/OpenSans-Light.ttf" />

            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@+id/tv_longest_jump_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_longest_jump"
                android:layout_alignParentEnd="true"
                android:text="M"
                android:textColor="@color/red"
                android:textSize="@dimen/result_unit_font_size"
                geekui:customTypeface="fonts/OpenSans-Regular.ttf" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_data_height"
        android:padding="@dimen/normal_padding">

        <com.gloomy.shreddingrobot.Widget.TypefaceTextView
            android:id="@+id/tv_max_speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ll_max_speed_number"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/max_speed"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/result_label_font_size"
            geekui:customTypeface="fonts/OpenSans-Semibold.ttf" />

        <View
            android:id="@+id/max_speed_bar"
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_below="@id/tv_max_speed_label"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:background="@color/green" />

        <LinearLayout
            android:id="@+id/ll_max_speed_number"
            android:layout_width="@dimen/result_number_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/max_speed_bar"
            android:gravity="right"
            android:orientation="horizontal">

            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@+id/tv_max_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_max_speed_unit"
                android:text="198"
                android:textColor="@color/green"
                android:textSize="@dimen/result_value_font_size"
                geekui:customTypeface="fonts/OpenSans-Light.ttf" />

            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@id/tv_max_speed_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_max_speed"
                android:layout_alignParentEnd="true"
                android:text="Km/h"
                android:textColor="@color/green"
                android:textSize="@dimen/result_unit_font_size"
                geekui:customTypeface="fonts/OpenSans-Regular.ttf" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_data_height"
        android:padding="@dimen/normal_padding">

        <com.gloomy.shreddingrobot.Widget.TypefaceTextView
            android:id="@+id/tv_avg_speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/ll_avg_speed_number"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/avg_speed"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/result_label_font_size"
            geekui:customTypeface="fonts/OpenSans-Semibold.ttf" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/tv_avg_speed_label"
            android:layout_marginEnd="@dimen/small_padding"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@id/ll_avg_speed_number"
            android:background="@color/green" />

        <LinearLayout
            android:id="@+id/ll_avg_speed_number"
            android:layout_width="@dimen/result_number_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">


            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@+id/tv_avg_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_avg_speed_unit"
                android:text="56"
                android:textColor="@color/green"
                android:textSize="@dimen/result_value_font_size"
                geekui:customTypeface="fonts/OpenSans-Light.ttf" />

            <com.gloomy.shreddingrobot.Widget.TypefaceTextView
                android:id="@id/tv_avg_speed_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_avg_speed"
                android:layout_alignParentEnd="true"
                android:text="Km/h"
                android:textColor="@color/green"
                android:textSize="@dimen/result_unit_font_size"
                geekui:customTypeface="fonts/OpenSans-Regular.ttf" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>